<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="false" />

        <service id="sylius.shop_api_plugin.data_provider.product.collection"
            class="Sylius\ShopApiPlugin\DataProvider\ProductCollectionDataProvider"
        >
            <argument type="service" id="sylius.repository.product" />
            <argument type="service" id="sylius.repository.taxon" />
            <argument type="service" id="api_platform.pagination" />
            <argument type="tagged" tag="api_platform.doctrine.orm.query_extension.collection" />
            <tag name="api_platform.collection_data_provider" />
        </service>

        <service id="sylius.shop_api_plugin.data_provider.product.item"
            class="Sylius\ShopApiPlugin\DataProvider\ProductItemDataProvider"
        >
            <tag name="api_platform.item_data_provider" />
        </service>
    </services>

</container>
