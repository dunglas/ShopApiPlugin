<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="false" />

        <service id="sylius.shop_api_plugin.handler.verification_email"
            class="Sylius\ShopApiPlugin\Handler\Email\VerificationEmailHandler"
        >
            <argument type="service" id="sylius.email_sender" />
            <tag name="messenger.message_handler" priority="-1" />
        </service>

        <service id="sylius.shop_api_plugin.handler.password_reset_email"
            class="Sylius\ShopApiPlugin\Handler\Email\PasswordResetEmailHandler"
        >
            <argument type="service" id="sylius.email_sender" />
            <tag name="messenger.message_handler" priority="-1" />
        </service>
    </services>

</container>
