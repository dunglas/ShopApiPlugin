<?xml version="1.0" ?>

<resources xmlns="https://api-platform.com/schema/metadata"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://api-platform.com/schema/metadata https://api-platform.com/schema/metadata/metadata-2.0.xsd">

    <resource class="Sylius\Component\Core\Model\TaxonInterface"
        shortName="Taxon"
    >

        <attribute name="normalization_context">
            <attribute name="groups">
                <attribute>sylius_shop_api_taxon_read</attribute>
            </attribute>
        </attribute>

        <collectionOperations>
            <collectionOperation name="get">
                <attribute name="method">GET</attribute>
                <attribute name="path">/{channelCode}/taxons/</attribute>
                <attribute name="normalization_context">
                    <attribute name="groups">
                        <attribute>sylius_shop_api_taxon_read</attribute>
                        <attribute>sylius_shop_api_taxon_list</attribute>
                    </attribute>
                </attribute>
                <attribute name="sylius_shop_api">true</attribute>
            </collectionOperation>
        </collectionOperations>

        <itemOperations>
            <!-- This is only for IRI generation -->
            <!-- Actually sending a request should result in HTTP 404 because of sylius.shop_api_plugin.data_provider.taxon.item -->
            <itemOperation name="get" />

            <itemOperation name="get_details">
                <attribute name="method">GET</attribute>
                <attribute name="path">/{channelCode}/taxons/{id}</attribute><!-- actually {code} but API Platform uses hardcoded {id} route parameter -->
                <attribute name="normalization_context">
                    <attribute name="groups">
                        <attribute>sylius_shop_api_taxon_read</attribute>
                        <attribute>sylius_shop_api_taxon_details</attribute>
                    </attribute>
                </attribute>
                <attribute name="sylius_shop_api">true</attribute>
            </itemOperation>
        </itemOperations>

        <property name="code" identifier="true" />

    </resource>

</resources>
